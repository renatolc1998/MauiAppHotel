<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10" Spacing="10">

        <Frame BackgroundColor="{StaticResource MidnightBlue}">
            <Label 
                Text="Sobre o Aplicativo"
                HorizontalTextAlignment="Center"
                FontSize="Title"
                FontFamily="KalamRegular"
                />
        </Frame>

        <Frame BackgroundColor="{StaticResource OffBlack}">
            <VerticalStackLayout Spacing="5">
                <Label Text="Nome do Desenvolvedor:"/>
                <Label Text="Renato Lopes Cardoso"/>
                <Label Text="Ano de Desenvolvimento:"/>
                <Label Text="2024"/>
            </VerticalStackLayout>
        </Frame>       
        
        <Button x:Name="btn_voltar"
                Text="Voltar"
                TextColor="{StaticResource White}"
                BackgroundColor="{StaticResource MidnightBlue}"
                Clicked="btn_voltar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>